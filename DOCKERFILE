FROM node:18 
# AS stage-one

# Install DEB dependencies and others.
RUN \
	set -x \
	&& apt-get update \
	&& apt-get install -y net-tools build-essential python3 python3-pip valgrind

WORKDIR /service

COPY ./packages/cosmocam-backend/ .
RUN npm install
RUN NODE_ENV=production

CMD ["node", "dist/server.js"]